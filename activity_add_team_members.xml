<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98AFC7"
    tools:context="com.example.dailyreportingtool.AddTeamMembers" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:background="#4C787E"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#736F6E" >

            <Button
                android:id="@+id/tmtitle1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/mystyle"
                android:text="Title"
             
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/Spinner02"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="18dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/Spinner03"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/Spinner02"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/proid1"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/mystyle" />

            <Spinner
                android:id="@+id/m1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tmtitle1"
                android:layout_marginTop="10dp"
                android:background="@drawable/mystyle"
                android:hint="Member 1"
                
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/m2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/m1"
                android:layout_marginTop="10dp"
                android:background="@drawable/mystyle"
                android:hint="Member 2"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/m4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/m3"
                android:layout_marginTop="10dp"
                android:background="@drawable/mystyle"
                android:hint="Member 4"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/m3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/m2"
                android:layout_marginTop="10dp"
                android:background="@drawable/mystyle"
                android:hint="Member 3"
                android:textColor="#000000" />

            <Button
                android:id="@+id/searchpro1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mystyle1"
                android:text="Add"
                android:textColor="#FFDEAD" />

            <EditText
                android:id="@+id/dur"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/m4"
                android:background="@drawable/mystyle"
                android:hint="Duration"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>