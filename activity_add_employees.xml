<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98AFC7"
    tools:context="com.example.dailyreportingtool.AddEmployees" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="240dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:background="#4C787E"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#736F6E" >

            <EditText
                android:id="@+id/eid"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/mystyle"
                android:ems="10"
                android:hint="               Id"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" >
            </EditText>

            <Spinner
                android:id="@+id/etype"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/ename"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/eid"
                android:layout_marginTop="20dp"
                android:background="@drawable/mystyle"
                android:ems="10"
                android:hint="           Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/epass"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="150dp"
                android:background="@drawable/mystyle"
                android:ems="10"
                android:hint="        Password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edes"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/epass"
                android:layout_marginTop="20dp"
                android:background="@drawable/mystyle"
                android:ems="10"
                
                android:hint="      Designation"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/eage"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edes"
                android:layout_marginTop="20dp"
                android:background="@drawable/mystyle"
                android:ems="10"
                android:hint="            Age"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <Button
                android:id="@+id/esub"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mystyle1"
                android:text="Add"
                android:textColor="#FFDEAD" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/eage"
                android:layout_marginTop="20dp"
                android:background="@drawable/mystyle"
                android:ems="10"
                android:inputType="phone"
                android:hint="    Phone Number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/eaddr"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_above="@+id/esub"
                android:layout_alignParentLeft="true"
                android:background="@drawable/mystyle"
                android:ems="10"
                android:hint="         Address"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>